<!--考生登录页面-->
<view class="container">
  <!-- 头部logo和标题 -->
  <view class="header">
    <view class="logo">
      <text class="logo-icon">🚁</text>
    </view>
    <view class="title">无人机考点管理</view>
    <view class="subtitle">考生登录</view>
  </view>

  <!-- 登录表单 -->
  <view class="form-container">
    <view class="form-group">
      <view class="form-label">身份证号</view>
      <input
        class="form-input {{formErrors.id_number ? 'error' : ''}}"
        placeholder="请输入身份证号"
        value="{{formData.id_number}}"
        maxlength="18"
        data-field="id_number"
        bindinput="onInputChange"
        type="idcard"
      />
      <view class="form-error" wx:if="{{formErrors.id_number}}">
        {{formErrors.id_number}}
      </view>
    </view>

    <view class="form-group">
      <view class="form-label">手机号</view>
      <input
        class="form-input {{formErrors.phone ? 'error' : ''}}"
        placeholder="请输入手机号"
        value="{{formData.phone}}"
        maxlength="11"
        data-field="phone"
        bindinput="onInputChange"
        type="number"
      />
      <view class="form-error" wx:if="{{formErrors.phone}}">
        {{formErrors.phone}}
      </view>
    </view>

    <!-- 登录按钮 -->
    <button
      class="btn btn-primary btn-large btn-block"
      loading="{{loading}}"
      disabled="{{loading}}"
      bindtap="handleLogin"
    >
      {{loading ? '登录中...' : '立即登录'}}
    </button>
  </view>

  <!-- 提示信息 -->
  <view class="tips-container" wx:if="{{showTips}}">
    <view class="tips-header">
      <text class="tips-title">登录说明</text>
      <text class="tips-close" bindtap="hideTips">×</text>
    </view>
    <view class="tips-content">
      <view class="tip-item">
        <text class="tip-icon">📋</text>
        <text class="tip-text">请使用报名时填写的身份证号和手机号</text>
      </view>
      <view class="tip-item">
        <text class="tip-icon">🔒</text>
        <text class="tip-text">您的个人信息将被严格保密</text>
      </view>
      <view class="tip-item">
        <text class="tip-icon">💡</text>
        <text class="tip-text">登录后可查看考试日程和生成签到码</text>
      </view>
    </view>
  </view>

  <!-- 底部操作区 -->
  <view class="bottom-actions">
    <view class="action-links">
      <text class="link-text" bindtap="goToStaffLogin">考务人员登录</text>
      <text class="link-divider">|</text>
      <text class="link-text" bindtap="showHelp">登录帮助</text>
    </view>

    <view class="contact-service" bindtap="contactService">
      <text class="contact-icon">📞</text>
      <text class="contact-text">联系客服</text>
    </view>
  </view>
</view>