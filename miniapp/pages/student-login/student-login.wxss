/* 考生登录页面样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 60rpx 40rpx;
  position: relative;
  overflow: hidden;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  z-index: 0;
}

/* 头部区域 */
.header {
  text-align: center;
  margin-bottom: 100rpx;
  position: relative;
  z-index: 1;
}

.logo {
  margin-bottom: 30rpx;
}

.logo-icon {
  font-size: 120rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.3));
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

/* 表单容器 */
.form-container {
  background: rgba(255, 255, 255, 0.95);
  padding: 60rpx 50rpx;
  border-radius: 24rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10rpx);
  margin-bottom: 60rpx;
  position: relative;
  z-index: 1;
}

.form-group {
  margin-bottom: 50rpx;
}

.form-label {
  display: block;
  margin-bottom: 20rpx;
  font-weight: 500;
  color: #262626;
  font-size: 30rpx;
}

.form-input {
  width: 100%;
  padding: 30rpx 24rpx;
  border: 3rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 30rpx;
  background: #fff;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #1890ff;
  box-shadow: 0 0 0 6rpx rgba(24, 144, 255, 0.1);
}

.form-input.error {
  border-color: #ff4d4f;
  box-shadow: 0 0 0 6rpx rgba(255, 77, 79, 0.1);
}

.form-error {
  margin-top: 12rpx;
  color: #ff4d4f;
  font-size: 24rpx;
}

/* 登录按钮 */
.btn-large {
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

/* 提示信息 */
.tips-container {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  margin-bottom: 60rpx;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.tips-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background: #f8f9fa;
  border-bottom: 2rpx solid #e9ecef;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
}

.tips-close {
  font-size: 40rpx;
  color: #adb5bd;
  cursor: pointer;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tips-content {
  padding: 30rpx 40rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  margin-top: 2rpx;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #6c757d;
  line-height: 1.6;
}

/* 底部操作区 */
.bottom-actions {
  position: relative;
  z-index: 1;
}

.action-links {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}

.link-text {
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
  text-decoration: underline;
  cursor: pointer;
}

.link-divider {
  color: rgba(255, 255, 255, 0.6);
  margin: 0 20rpx;
}

.contact-service {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  cursor: pointer;
  transition: all 0.3s ease;
}

.contact-service:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.98);
}

.contact-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.contact-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

/* 响应式适配 */
@media (max-width: 320px) {
  .container {
    padding: 60rpx 40rpx 40rpx;
  }

  .form-container {
    padding: 40rpx 30rpx;
  }

  .title {
    font-size: 40rpx;
  }

  .subtitle {
    font-size: 28rpx;
  }
}